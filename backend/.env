# Server Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cyber_threat_intelligence
DB_USER=postgres
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# AI/ML Configuration
TF_MODEL_PATH=./models/threat-classifier
ENABLE_ML_PROCESSING=true

# Data Ingestion
ENABLE_DATA_INGESTION=true
DEFAULT_FETCH_INTERVAL=0 */6 * * *

# Monitoring
MONITORING_INTERVAL_MS=300000
ALERT_THRESHOLD=0.6

# External APIs (optional)
VIRUSTOTAL_API_KEY=
SHODAN_API_KEY=
CENSYS_API_ID=
CENSYS_API_SECRET=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@cyberintel.com

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000
